// Note: Certain includes (e.g. mixins + lib files are part of the
// grunt-contrib-stylus conf.


@import '_throbber';
@import '_buttons';
@import '_full-error';
@import '_forms';

$mp-fonts-path = '../lib/mp-fonts-stylus';
@import '../lib/mp-fonts-stylus/fonts';

@import '_typography';

html, body {
    background: $bg-color;
    color: $dark-gray;
    grain();
    height: 100%;
    margin: 0;
    min-width: 250px;
    width: 100%;
}

main {
    margin: 0 auto;
    max-width: 600px;
    width: 100%;
    padding: 0 20px;
}

.hidden {
    display: none;
}

.hidden.show {
    display: block;
}


.buttons {
    background: rgba(0,0,0,0.03);
    border-top: 1px solid #ccc;
    line-height: 0;
    margin: 10px -20px -10px;
    padding: 10px;

    .button {
        width: calc(50% - 5px);
        margin: 0;

        &:first-child {
            margin-right: 5px
        }

        &:only-child {
            margin: 0;
            width: 100%;
        }
    }
}

.sign-in,
.sign-in:before {
    background: url(../images/persona-btn-sprite.png) no-repeat right top;
}

.sign-in {
    color: $dark-gray;
    display: block;
    height: 42px;
    line-height: 42px;
    margin-top: 20px;
    max-width: 231px;
    padding-left: 50px;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 1px $white;
    width: 100%;
    &:hover,
    &:active,
    &:focus {
        background-position: right bottom;
    }
}

.pinform {
    input {
        font-size: 30px;
        width: 1.5em;
        height: 1.5em;
        text-align: center;
    }
}
