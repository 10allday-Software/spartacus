.throbber {
    // This will normally be overlaid hence it needs it's own background.
    background: $bg-color;
    background: rgba(244, 244, 244, 0.9);
    bottom: 0;
    grain();
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 10;

    .msg {
        text-align: center;
    }

    .progress {
        display: block;
        margin: 80px auto 0;
        height: 53px;
        width: 53px;
        background: transparent embedurl('throbber-53.gif') no-repeat 50% 50%;
    }
}


